<body>

    <div id="calendar"></div>

    <script>
      document.addEventListener('DOMContentLoaded', function() {
        var calendarEl = document.getElementById('calendar');
        var calendar = new FullCalendar.Calendar(calendarEl, {
          initialView: 'listDay', // Shows just today's events—great for lobbies!
          headerToolbar: { left: 'title', center: '', right: '' },
          events: [
            { title: 'Lobby Display Is Working! ✅', start: new Date().toISOString().split('T')[0] + 'T08:00:00' },
            { title: 'Ready for Real Events', start: new Date().toISOString().split('T')[0] + 'T12:00:00' }
          ]
        });
        calendar.render();
      });
    </script>
</body>
