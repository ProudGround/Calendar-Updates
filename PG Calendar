    <div id="calendar"></div>

    <script>
      document.addEventListener('DOMContentLoaded', function() {
        var calendarEl = document.getElementById('calendar');
        var calendar = new FullCalendar.Calendar(calendarEl, {
          initialView: 'listWeek', // 'listWeek' is best for M-F schedules
          headerToolbar: {
            left: 'title',
            center: '',
            right: ''
          },
          // THIS IS WHERE YOUR DATA COMES FROM
          events: [
            { title: 'Morning Standup', start: '2023-10-27T09:00:00', end: '2023-10-27T10:00:00' },
            { title: 'Project Launch', start: '2023-10-28T13:00:00' }
            // To sync Google: googleCalendarId: 'your_email@gmail.com'
          ],
          height: 'auto',
          eventTimeFormat: { hour: 'numeric', minute: '2-digit', meridian: 'short' }
        });
        calendar.render();
      });
    </script>
