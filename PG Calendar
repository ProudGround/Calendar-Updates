    <meta charset="UTF-8">
    <title>Lobby Calendar</title>
    <script src="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.10/index.global.min.js"></script>
    
    <style>
        body { 
            background-color: #1a1a1a; /* Dark sleek background */
            color: white; 
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 50px;
            display: flex;
            justify-content: center;
        }
        #calendar {
            width: 100%;
            max-width: 1000px;
            background: #252525;
            padding: 30px;
            border-radius: 20px;
            border: 4px solid #00d4ff; /* This is your "Lively Pop" Blue */
            box-shadow: 0 0 30px rgba(0, 212, 255, 0.2);
        }
        /* Style for the event blocks */
        .fc-event {
            background-color: #7000ff !important; /* Purple Pop */
